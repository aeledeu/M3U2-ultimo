<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Servicios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>
    <div class="row my-3">
        <div id="servicios" class="col-md-5 offset-md-2 py-3 scroll_section">
            <h2>Servicios</h2>
            <ul class="lista-servicios">
                {{#each novedades}}
                <li>
                    <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#exampleModal{{id}}">
                        <img src="{{imagen}}">{{titulo}}</a>
                </li>
                {{/each}}



            </ul>
        </div>
    </div>

{{#each novedades}}
    <div class="modal fade" id="exampleModal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">{{titulo}}</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <img src="{{imagen}}">
                    <h5>{{subtitulo}}</h5>
                 <p>{{cuerpo}}</p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>